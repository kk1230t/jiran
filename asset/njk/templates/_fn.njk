{% macro cont_visual(title1='', title2='', img='', decs='', type1, type2, type3, btn1, btn2, btn3 ) %}
    <div class="visual_sec" id="visualSec">
        <div class="txt_sec">
            <p class="title">
                <span class="small">{{title1}}</span>
                <span>{{title2}}</span>
            </p>
            <div class="visual_img">
                <img src="../../images/product/{{img}}.png" alt="">
            </div>
            <p class="decs">{{decs}}</p>
			{% if type1 or type2 or type3 %}
            <div class="type">
				{% if type1 %}
                <span class="type1"><i></i>구축형</span>
				{% endif %}
				{% if type2 %}
                <span class="type2"><i></i>어플라이언스</span>
				{% endif %}
				{% if type3 %}
                <span class="type3"><i></i>클라우드</span>
				{% endif %}
            </div>
			{% endif %}
			{% if btn1 or btn2 or btn3 %}
            <div class="btns">
				{% if btn1 %}
                <a href="" class="download">브로셔 다운로드</a>
				{% endif %}
				{% if btn2 %}
                <a href="" class="demo">실시간 데모</a>
				{% endif %}
				{% if btn3 %}
                <a href="" class="cloude">클라우드 30일 무료</a>
				{% endif %}
            </div>
			{% endif %}
        </div>
    </div>
{% endmacro %}

{% macro cont_first(title='', decs='', img='', sub_decs='', id='', class='') %}
	<div class="prd_sec {{class}}" id="{{id}}">
		<div class="inset">
			<p class="title">{{ title }}</p>
			<p class="decs">{{decs}}</p>
			<div class="img"><img src="../../images/product/{{img}}.png" alt=""></div>
			{% if sub_decs %}
				<p class="sub_decs">{{sub_decs}}</p>	
			{% endif %}
			
		</div>
	</div>
{% endmacro %}


{% macro scrollnav(nav) %}
	<div class="inset">
		<ul class="ui-spynav">
		{% for i in nav %}
			<li><a href="#cont{{loop.index}}"><span>{{i}}</span></a></li>
		{% endfor %}
		</ul>
	</div>
{% endmacro %}


{% macro cont_benefits(title, decs, list_decs, subDecs, id, class) %}
