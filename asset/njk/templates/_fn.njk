		<div class="inset">
			<p class="title">{{title}}</p>
			<p class="decs">{{decs}}</p>
			<div class="prd_benefits">
				<ul>
					{% for txts in list_decs %}
						<li>
							<div class="img_ico"><img src="../../images/product/{{txts.img}}.png" alt=""></div>
							<dl>
								<dt>{{txts.title}}</dt>
								<dd>{{txts.decs}}</dd>
							</dl>
						</li>
					{% endfor %}
				</ul>
			</div>
			{% if subDecs %}
			<p class="sub_decs">{{subDecs}}</p>	
			{% endif %}
			
		</div>
	</div>
{% endmacro %}


