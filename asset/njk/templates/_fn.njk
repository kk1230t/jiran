{% macro cont_use(title, decs, list_decs, id, class) %}
{% set imgs = [
	'img_product_use_appliance',
	'img_product_use_cloud',
	'img_product_use_onpremise'
] %}
	<div class="prd_sec {{class}}" id="{{id}}">
		<div class="inset">
			<p class="title">{{title}}</p>
			<p class="decs">{{decs}}</p>
			<div class="prd_use">
				<div class="swiper-container" id="box_slider">
					<div class="box swiper-wrapper">
						{% for txts in list_decs %}
							<div class="lists swiper-slide">
								<div>
									<span class="num">
									{% for i in range(0, loop.index) %}
										<i></i>
									{%- endfor %}
									</span>
									<dl>
										<dt>{{txts.title}}</dt>
										<dd>{{txts.decs}}</dd>
									</dl>
									<a href="" class="link">브로셔 다운로드</a>
									<div class="img_ico"><img src="../../images/product/{{imgs[loop.index0]}}.png" alt=""></div>
								</div>
							</div>	
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endmacro %}

